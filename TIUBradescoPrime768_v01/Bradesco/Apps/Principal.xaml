            </Button.Background>
        </Button>

        <Button Name="btn10" Style="{StaticResource InformButton}" Margin="627,1237,0,0" Width="65" Height="108" BorderThickness="0" Click="Button_Click_11" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <Button.Background>
                <ImageBrush ImageSource="/Bradesco;component/Imagens/interno/icon_interno_10.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>

        <Button Name="btnPrime" Style="{StaticResource InformButton}" Margin="696,1237,0,0" Width="65" Height="108" BorderThickness="0" Click="Button_Click_12" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <Button.Background>
                <ImageBrush ImageSource="/Bradesco;component/Imagens/interno/icon_interno_11.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>

        <Button x:Name="btnVoltar" Style="{StaticResource InformButton}" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="112" Height="45" BorderThickness="0" Click="Button_Click_9" Margin="10,122,0,0">
            <Button.Background>
                <ImageBrush ImageSource="/Bradesco;component/Imagens/interno/bt_interno_voltar.png" Stretch="UniformToFill"/>
            </Button.Background>
            <Button.Triggers>
                <EventTrigger RoutedEvent="UserControl.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard Storyboard="{StaticResource showItemsMenuStoryboard}" />
                    </EventTrigger.Actions>
                </EventTrigger>
            </Button.Triggers>
            <Button.RenderTransform>
                <TranslateTransform X="-200"/>
            </Button.RenderTransform>
        </Button>

        <Button x:Name="btnAjuda" Style="{StaticResource InformButton}" HorizontalAlignment="Left" Margin="640,122,10,0" VerticalAlignment="Top" Width="112" Height="45" BorderThickness="0" Click="Button_Click_10">
            <Button.Background>
                <ImageBrush ImageSource="/Bradesco;component/Imagens/interno/bt_interno_ajuda.png" Stretch="UniformToFill"/>
            </Button.Background>
            <Button.Triggers>
                <EventTrigger RoutedEvent="UserControl.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard Storyboard="{StaticResource showItemsMenuStoryboard}" />
                    </EventTrigger.Actions>
                </EventTrigger>
            </Button.Triggers>
            <Button.RenderTransform>
                <TranslateTransform X="200"/>
            </Button.RenderTransform>
        </Button>

        <Label Content="{Binding Source={StaticResource ticker}, Path=Now, Mode=OneWay}" Margin="551,42,185,1832" FontFamily="NewJuneHeavy" Foreground="Gray" FontSize="28" />
        <Label Content="{Binding Source={StaticResource ticker}, Path=Today, Mode=OneWay}" Margin="551,84,10,1788" FontFamily="NewJuneHeavy" Foreground="Gray" FontSize="26" />
        <Label Name="labelTitulo" Content="" Margin="124,124,130,1200" Background="{x:Null}" FontSize="21" FontFamily="NewJuneBold" 
           HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="514" Height="42">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>

        <Grid Name="gridAjuda"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="768" Height="1366" Visibility="Visible" d:IsHidden="True"  />

    </Grid>
</UserControl>
