            </Button.Background>
        </Button>

        <Button Name="btn8" Style="{StaticResource InformButton}" Margin="489,1237,0,0" Width="65" Height="108" BorderThickness="0" Click="Button_Click_7" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <Button.Background>
