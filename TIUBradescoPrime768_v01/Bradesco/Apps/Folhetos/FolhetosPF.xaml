		<Image Source="/Bradesco;component/Imagens/folhetos/10_folhetos_PF.png" Stretch="UniformToFill" Width="768" Height="1022" IsManipulationEnabled="False" />

		<Grid  x:Name="gridPrincipal"  ClipToBounds="True" RenderTransformOrigin="0.5, 0.5" Width="768" Height="1022"/>

